# Class
# Syntaxe

class Computador:
    # PROPRIEDADES: Marca, Memória Ram, Placa de Vídeo
    # SELF serve para acessar as propriedades ou métodos de uma instância
    def __init__(self, marca, memoria_ram, placa_de_video):
        self.marca = marca
        self.memoria_ram = memoria_ram
        self.placa_de_video = placa_de_video
    
# INSTÂNCIAS
computador1 = Computador('Asus','8gb','Nvidea') # ARGUMENTOS
computador2 = Computador('Dell','10gb','GeForce') # ARGUMENTOS
computador3 = Computador('Acer','16gb','ATM') # ARGUMENTOS
print(computador1.marca, computador1.memoria_ram, computador1.placa_de_video)
print(computador2.marca, computador2.memoria_ram, computador2.placa_de_video)
print(computador3.marca, computador3.memoria_ram, computador3.placa_de_video)


# Marca, Memória Ram, Placa de Vídeo
class Computador:
    # PROPRIEDADES: Marca, Memória Ram, Placa de Vídeo
    # SELF serve para acessar as propriedades ou métodos de uma instância
    def __init__(self, marca, memoria_ram, placa_de_video):
        self.marca = marca
        self.memoria_ram = memoria_ram
        self.placa_de_video = placa_de_video
        
# MÉTODOS
    def Ligar(self):
        print('Estou ligando')
    
    def Desligar(self):
        print('Estou desligando')
    
    def ExibirInformacoesDesteComputador(self):
        print(self.marca, self.memoria_ram, self.placa_de_video)

computador1 = Computador('Asus','16gb','Nvidea') # PROPRIEDADES
computador1.Ligar()
computador1.Desligar()
computador1.ExibirInformacoesDesteComputador()


# DESAFIO
'''Você irá criar a Class carro e eu quero no mínimo 3 
propriedades para a classe carro e no mínimo 3 métodos para ela'''

class Carro():
    # PROPRIEDADES
    def __init__(self, marca, ano, cor): 
        self.marca = marca
        self.ano = ano
        self.cor = cor
    
    
    # MÉTODOS
    def Alugado(self): # MÉTODOS
        print('Este veículo está alugado')
    
    def Disponivel(self):
        print('Este veículo está disponível')

    def Reparo(self):
        print('Este veículo está em reparo')

    def ExibirEstoque(self):
        print(self.marca, self.ano, self.cor)
    

carro = Carro('Honda',2012,'Dourado')
carro.Alugado()
carro.Disponivel()
carro.Reparo()
carro.ExibirEstoque()
